# LUMA API Configuration
LUMA_API_KEY=your_luma_api_key_here

# Server Configuration
LUMA_HOST=localhost
LUMA_PORT=8000
LUMA_DEBUG=false

# Rate Limiting (optional - defaults provided)
LUMA_RATE_LIMIT_GET_REQUESTS=500
LUMA_RATE_LIMIT_POST_REQUESTS=100
LUMA_RATE_LIMIT_WINDOW_SECONDS=300
LUMA_RATE_LIMIT_BLOCK_DURATION_SECONDS=60

# Request Configuration (optional - defaults provided)
LUMA_REQUEST_TIMEOUT_SECONDS=30
LUMA_MAX_RETRIES=3
LUMA_RETRY_BACKOFF_FACTOR=2.0